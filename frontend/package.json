{
  "name": "chicago-budget-explorer-frontend",
  "version": "1.0.0",
  "description": "Frontend for Chicago Budget Explorer",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest run",
