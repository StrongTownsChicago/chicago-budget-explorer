---
import BaseLayout from "../layouts/BaseLayout.astro";
import { loadBudgetData } from "@/lib/data-loader";
import { formatCurrency } from "@/lib/format";

const data = await loadBudgetData("city-of-chicago", "fy2026");
const totalBudget = data.metadata.total_appropriations;
const departmentCount = data.appropriations.by_department.length;
const fiscalYear = data.metadata.fiscal_year_label;
---

<BaseLayout
  title="Home"
  description={`Explore and simulate Chicago's ${formatCurrency(totalBudget)} budget`}
>
  <!-- Hero Section -->
  <section class="gradient-hero text-white -mx-4 -mt-8 px-4 py-16 md:py-24 mb-12">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-extrabold mb-4 tracking-tight leading-tight">
        Where does Chicago spend {formatCurrency(totalBudget)}?
      </h1>
      <p class="text-xl text-white/80 mb-8 max-w-2xl mx-auto">
        Explore the Chicago's budget interactively. Simulate changes. Find out where does the city's revenue come from and how the budget has changed over time.
      </p>
      <div class="flex gap-4 justify-center flex-wrap">
        <a href="/entity/city-of-chicago" class="px-8 py-3 bg-white text-chicago-blue rounded-lg font-semibold hover:bg-gray-100 transition-all shadow-lg">
          Explore the Budget
        </a>
        <a href="/entity/city-of-chicago/compare" class="px-8 py-3 bg-white/15 text-white rounded-lg font-semibold hover:bg-white/25 transition-all border border-white/30">
          Compare Years
        </a>
        <a href="/entity/city-of-chicago/simulate" class="px-8 py-3 bg-white/15 text-white rounded-lg font-semibold hover:bg-white/25 transition-all border border-white/30">
          Try the Simulator
        </a>
      </div>
    </div>
  </section>

  <div class="max-w-4xl mx-auto">
    <!-- Quick Stats -->
    <section class="py-12">
      <h2 class="text-3xl font-bold text-center mb-8 tracking-tight">Quick Facts</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="card p-6 border-l-4 border-l-chicago-blue">
          <div class="text-4xl font-bold text-chicago-blue mb-2 tracking-tight">{formatCurrency(totalBudget)}</div>
          <div class="text-gray-600 font-medium">Total Appropriations ({fiscalYear})</div>
        </div>
        <div class="card p-6 border-l-4 border-l-chicago-light-blue">
          <div class="text-4xl font-bold text-chicago-blue mb-2 tracking-tight">{departmentCount}</div>
          <div class="text-gray-600 font-medium">City Departments</div>
        </div>
      </div>
    </section>

    <!-- Feature Highlights -->
    <section class="py-12 border-t border-border-subtle">
      <div class="grid md:grid-cols-3 gap-6">
        <a href="/entity/city-of-chicago" class="card-hover p-6 text-center group">
          <div class="text-3xl mb-3">&#x1F4CA;</div>
          <h3 class="font-semibold text-gray-900 mb-2 group-hover:text-chicago-blue transition-colors">Analyze</h3>
          <p class="text-sm text-gray-600">Analyze budgets across fiscal years and track department spending trends.</p>
        </a>
        <a href="/entity/city-of-chicago/compare" class="card-hover p-6 text-center group">
          <div class="text-3xl mb-3">&#x2696;</div>
          <h3 class="font-semibold text-gray-900 mb-2 group-hover:text-chicago-blue transition-colors">Compare</h3>
          <p class="text-sm text-gray-600">Compare budgets between any two fiscal years and see what changed department by department.</p>
        </a>
        <a href="/entity/city-of-chicago/simulate" class="card-hover p-6 text-center group">
          <div class="text-3xl mb-3">&#x2699;</div>
          <h3 class="font-semibold text-gray-900 mb-2 group-hover:text-chicago-blue transition-colors">Simulate</h3>
          <p class="text-sm text-gray-600">Adjust department budgets with sliders and see how changes affect the total.</p>
        </a>
      </div>
    </section>

    <!-- About Preview -->
    <section class="py-12 border-t border-border-subtle">
      <div class="card p-8">
        <h2 class="text-3xl font-bold mb-6 tracking-tight">What is this?</h2>
        <div class="prose max-w-none">
          <p class="text-lg text-gray-700 mb-4">
            The Chicago Budget Explorer is a <strong>free, open, interactive tool</strong> for
            exploring the City of Chicago's budget. Built by Strong Towns Chicago, it makes
            budget data transparent and accessible.
          </p>
          <div class="mt-6">
            <a href="/about" class="btn-link">
              Learn more about this project &rarr;
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
