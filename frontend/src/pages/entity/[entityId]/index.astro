---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { loadBudgetData, getManifest } from "@/lib/data-loader";
import { formatCurrency } from "@/lib/format";
import DepartmentBar from "@/components/charts/DepartmentBar";
import FundPie from "@/components/charts/FundPie";
import AppropriationBreakdown from "@/components/charts/AppropriationBreakdown";
import BudgetTreemap from "@/components/charts/BudgetTreemap";

export async function getStaticPaths() {
  const manifest = getManifest();
  return manifest.entities
    .filter((e) => e.status === "active")
    .map((entity) => ({
      params: { entityId: entity.id },
      props: { entity },
    }));
}

const { entityId } = Astro.params;
const { entity } = Astro.props;

// Load budget data for default year
const data = await loadBudgetData(entityId, entity.default_year);
---

<BaseLayout
  title={`${entity.name} Budget`}
  description={`Explore the ${entity.name} ${data.metadata.fiscal_year_label} budget of ${formatCurrency(data.metadata.total_appropriations)}`}
>
  <div class="space-y-12">
    <!-- Header -->
    <header>
      <h1 class="text-4xl font-bold text-gray-900">{entity.name}</h1>
      <p class="text-xl text-gray-600 mt-2">
        {data.metadata.fiscal_year_label} Budget: {formatCurrency(data.metadata.total_appropriations)}
      </p>
      <div class="mt-4 flex gap-3">
        <a
          href={`/entity/${entityId}/simulate`}
          class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-semibold"
        >
          Try the Simulator →
        </a>
        <a
          href="/"
          class="inline-block px-6 py-3 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition-colors font-semibold"
        >
          ← Back to Home
        </a>
      </div>
    </header>

    <!-- Department Breakdown -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Spending by Department</h2>
      <DepartmentBar
        departments={data.appropriations.by_department}
        totalBudget={data.metadata.total_appropriations}
        client:visible
      />
    </section>

    <!-- Fund Breakdown -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Spending by Fund Type</h2>
      <FundPie funds={data.appropriations.by_fund} client:visible />
    </section>

    <!-- Appropriation Type -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Spending by Category</h2>
      <AppropriationBreakdown departments={data.appropriations.by_department} client:visible />
    </section>

    <!-- Treemap -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Budget Treemap</h2>
      <p class="text-gray-600 mb-4">
        Visual representation of the budget with departments sized by their budget allocation.
      </p>
      <BudgetTreemap departments={data.appropriations.by_department} client:idle />
    </section>

    <!-- Data Source Attribution -->
    <footer class="mt-12 pt-6 border-t border-gray-200">
      <p class="text-sm text-gray-600">
        Data Source: {data.metadata.data_source} (Dataset: {data.metadata.source_dataset_id})
        <br />
        Extracted: {new Date(data.metadata.extraction_date).toLocaleDateString()}
        <br />
        Pipeline Version: {data.metadata.pipeline_version}
      </p>
    </footer>
  </div>
</BaseLayout>
